#!/usr/bin/env ruby
require 'ffi-gtk3'

Gtk.init
win = Gtk::Window.new :toplevel

win.signal_connect "destroy" do
  Gtk.main_quit
  false
end

win.signal_connect 'key-press-event' do |wdg, evt, ud|
  if evt.state == :control_mask and evt.keyval == "q".ord
    win.destroy
  end
  false
end


win.show
Gtk.main
